datasource db {
  provider = "postgresql"
  url      = env("DB_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Item {
  id         String  @id @default(uuid())
  objectType String
  dimensions String
  area       Float
  height     Float
  volume     Float
  weight     Float
  qrData     String
  order      Order?  @relation(fields: [orderId], references: [id])
  orderId    String? @unique
}

model Address {
  id       String @id @default(uuid())
  address  String
  lat      Float
  lng      Float
  order    Order  @relation(fields: [orderId], references: [id])
  orderId  String @unique
}

model Order {
  id             String   @id @default(uuid())
  productId      String
  name           String
  status         String
  awb            String   @unique
  isDynamicPoint Boolean  @default(false)
  reachTime      Int      @default(0)
  deliveryTime   Int      @default(0)
  deliveryLat    Float    @default(0)
  deliveryLng    Float    @default(0)
  address        Address?
  items          Item?
  cluster        Cluster? @relation(fields: [clusterId], references: [id], onDelete: Cascade)
  clusterId      String?
}

model Rider {
  id       String   @id @default(uuid())
  username String   @unique
  password String
  fcmToken String   @default("")
  cluster  Cluster?
}

model Cluster {
  id      String  @id @default(uuid())
  riderId String  @unique
  endTime Int     @default(0)
  order   Order[]
  rider   Rider   @relation(fields: [riderId], references: [id], onDelete: Cascade)
}
